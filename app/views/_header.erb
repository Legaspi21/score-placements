<div class="container">

  <div class="jumbotron">

    <h1>Score Placements</h1>
    <p>Send beats to the artist YOU want to work with</p>
    <!-- If Logged in -->
    <% if current_user %>

    <!-- <a class="btn btn-primary btn-lg" href="#" role="button">Log in</a> -->

    <a class="btn btn-primary btn-lg" href="/users/<%= current_user.id %> " role="button">Home</a>

    <form id="log-out-form" action="/sessions" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-primary btn-lg" type="submit" form="log-out-form" value="Logout">Log Out</button>
    </form>

    <!-- If Not Logged in -->
    <% else %>


    <!-- LOGIN MODEL -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      Login
    </button>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Log In</h4>
          </div>
          <div class="modal-body">
            <%= erb :'/sessions/new' %>
          </div>
          <div class="modal-footer">
           <!--  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
           <p>If your not already a user...</p>
           <a class="btn btn-default" href="/users/new" role="button">Sign up!</a>
         </div>
       </div>
     </div>
   </div>









